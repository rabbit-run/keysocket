{
  "name": "虾米 Mac媒体键支持",
  "version": "0.0.1",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "description": "支持Mac媒体键（F7, F8, F9）控制网页版虾米音乐播放器。",
  "permissions": ["tabs"],
  "manifest_version": 2,
  "commands": {
    "prev": {
        "suggested_key": {
            "default": "MediaPrevTrack",
            "mac": "MediaPrevTrack"
        },
        "description": "Play Previous Track",
        "global":true
    },
      "play-pause": {
        "suggested_key": {
            "default": "MediaPlayPause",
            "mac": "MediaPlayPause"
        },
        "description": "Play/Pause Active Audio",
        "global":true
    },
      "next": {
        "suggested_key": {
            "default": "MediaNextTrack",
            "mac": "MediaNextTrack"
        },
        "description": "Play Next Track",
        "global":true
    },
      "stop": {
        "suggested_key": {
            "default": "MediaStop",
            "mac": "MediaStop"
        },
        "description": "Stop Audio",
        "global":true
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["http://www.xiami.com/play"],
      "js": ["shared.js","keysocket-xiami.js"]
    }
  ]
}
